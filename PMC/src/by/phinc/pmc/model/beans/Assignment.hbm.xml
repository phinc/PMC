<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="by.phinc.pmc.model.beans">
 <class name="Assignment" table="assignment" >
  
  <id name="id" type="int" column="id" >
   <generator class="native"/>
  </id>
  
  <property name="name" not-null="true">
   <column name="short_description" />
  </property>
  <property name="description">
   <column name="long_description"/>
  </property>
  <property name="planStart" type="date">
   <column name="planned_start_date"/>
  </property>
  <property name="planDuration">
   <column name="planned_duration"/>
  </property>
  <property name="actStart" type="date">
   <column name="actual_start_date"/>
  </property>
  <property name="actDuration">
   <column name="actual_duration"/>
  </property>
  <property name="status" not-null="true">
	 <type name="org.hibernate.type.EnumType">
	    <param name="enumClass">
	      by.phinc.pmc.model.beans.Status
	    </param>
	    <param name="type">12</param>
	 </type>
  </property>
  
  <many-to-one name="member" 
  				 column="team_member_id"
  				 class="TeamMember"
  				 not-null="true"
  				 update="true"
  				 insert="true"/>
  	
  <many-to-one name="task"
  				 column="task_id"
  				 class="Task"
  				 not-null="true"/>
  				 
  <set name="activities"
  	 inverse="true"
  	 sort="natural"
  	 cascade="save-update, delete, delete-orphan">
   	<key column="assignment_id" on-delete="cascade"/>
   	<one-to-many class="Activity"/>
  </set>
 
  
 </class>
</hibernate-mapping>