<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="by.phinc.pmc.model.beans">
 <class name="Project" table="project" >
  
  <id name="id" type="int" column="id" >
   <generator class="native"/>
  </id>
  
  <version name="version" access="field" column="version"/>
  
  <property name="name" not-null="true">
   <column name="short_description" />
  </property>
  <property name="description">
   <column name="long_description"/>
  </property>
  <property name="planStart" type="date">
   <column name="planned_start_date"/>
  </property>
  <property name="planDuration">
   <column name="planned_duration"/>
  </property>
  <property name="actStart" type="date">
   <column name="actual_start_date"/>
  </property>
  <property name="actDuration">
   <column name="actual_duration"/>
  </property>
  
  <property name="customer"/>
  
  <property name="status" not-null="true">
	 <type name="org.hibernate.type.EnumType">
	    <param name="enumClass">
	      by.phinc.pmc.model.beans.Status
	    </param>
	    <param name="type">12</param>
	 </type>
  </property>
  
  <set name="documents"
  	   table="project_document"
  	   sort="natural"
  	   cascade="save-update, delete">
  	<key column="project_id"/>
  	<many-to-many class="Document"
  				  column="document_id"
  				  unique="true"/>
  </set>
  	
  <set name="team" 
  		inverse="true"
  		sort="natural"
  		cascade="save-update, delete">
  		 <!-- cascade save-update make team element save automatically
  		 cascade delete make the team objects be removed when project is removed 
  		 attribute sort is compulsory for sorted set -->			
  		<key column="project_id"/>
  		<!-- TeamMember can exist outside the collection -->
  		<one-to-many class="TeamMember"/>
  	</set>
  	
  	<set name="tasks" 
  		 inverse="true"
  		 sort="natural"
  		 cascade="save-update, delete">
  		<key column="project_id"/>
  		<one-to-many class="Task"/>
  	</set> 
  
 </class>
</hibernate-mapping>