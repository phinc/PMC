<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.phinc.by/pmc/employee" 
	xmlns:emp="http://www.phinc.by/pmc/employee">

	<xsd:element name="employees">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="employee" type="emp:EmployeeType" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:complexType name="EmployeeType">
		<xsd:all>
			<xsd:element name="first-name" type="xsd:string"/>
			<xsd:element name="last-name" type="xsd:string"/>
			<xsd:element name="email" type="xsd:string"/>
			<xsd:element name="post" type="xsd:string"/>
			<xsd:element name="login" type="xsd:string"/>
			<xsd:element name="password" type="xsd:string"/>
		</xsd:all>
		<xsd:attribute name="id" type="xsd:positiveInteger" use="required"/>
	</xsd:complexType>
</xsd:schema>